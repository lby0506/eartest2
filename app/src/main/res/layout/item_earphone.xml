<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 이어폰 이미지 -->
        <ImageView
            android:id="@+id/earphoneImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/rounded_input"
            android:contentDescription="이어폰 이미지"
            android:layout_marginBottom="12dp" />

        <!-- 이어폰 이름 -->
        <TextView
            android:id="@+id/earphoneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이어폰 이름"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#222222" />

        <!-- 브랜드 -->
        <TextView
            android:id="@+id/earphoneBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="브랜드명"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />

        <!-- 네이버 링크 -->
        <TextView
            android:id="@+id/earphoneInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네이버 최저가 보기"
            android:textSize="14sp"
            android:textColor="#4DB8FF"
            android:layout_marginTop="8dp" />

        <!-- 즐겨찾기 버튼 -->
        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_heart_outline"
            android:contentDescription="즐겨찾기" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
